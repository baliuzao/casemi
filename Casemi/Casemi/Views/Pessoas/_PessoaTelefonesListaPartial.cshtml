@model IEnumerable<Casemi.Models.PessoaTelefones>

<h4>Telefones</h4>
<hr />
<div class="row form-group">
    <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Tipo)</strong></div>
    <div class="col-md-8"><strong>Telefone</strong></div>
    <div class="col-md-2 text-right">
        <a href="@Url.Action("PessoaTelefonesCreatePartial", "Pessoas", new { PessoaID = ViewBag.PessoaID })" data-modal="" data-id="replacetargetTelefone" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Adicionar">
            <span class='glyphicon glyphicon-plus'></span>
        </a>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row form-group">
        <div class="col-md-2 text-left">
            <small>@Html.DisplayFor(modelItem => item.Tipo)</small>
        </div>
        <div class="col-md-8 text-left">
            <small>
                @Html.DisplayFor(modelItem => item.Numero)
            </small>
        </div>

        <div class="col-md-2 text-right">
            @*usando data-id para passagem do nome do painel a atualizar*@
            <a href="@Url.Action("PessoaTelefonesEditPartial", "Pessoas", new { id = item.PessoaTelefoneID})" data-modal="" data-id="replacetargetTelefone" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Alterar">
                <span class='glyphicon glyphicon-pencil'></span>
            </a>

            @*usando data-id para passagem do nome do painel a atualizar*@
            <a href="@Url.Action("PessoaTelefonesDeletePartial", "Pessoas", new { id = item.PessoaTelefoneID})" data-modal="" data-id="replacetargetTelefone" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Excluir">
                <span class='glyphicon glyphicon-trash'></span>
            </a>
        </div>
    </div>    
}

<div class="row form-group">
    <div class="col-md-12 text-left"><strong>Telefones:</strong> @Model.Count().ToString()</div>
</div>
<hr />

@Scripts.Render("~/bundles/modalform")
