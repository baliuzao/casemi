@model Casemi.Models.PessoaJuridica


@using (Ajax.BeginForm("PessoaJuridicaFormPartial", "Pessoas", new AjaxOptions { UpdateTargetId = "PessoaJuridicaForm", OnComplete = "$('#pessoaJuridicaFormMessage').fadeIn(); $('#pessoaJuridicaFormMessage').fadeOut(5000);" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PessoaID)

        <div class="form-group">
            @Html.LabelFor(model => model.CNPJ, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.CNPJ, new { htmlAttributes = new { @class = "form-control", placeholder = "00.000.000/0000-00" } })
                @Html.ValidationMessageFor(model => model.CNPJ, "", new { @class = "text-danger" })
            </div>
            <script type="text/javascript">
                $("#CNPJ").mask("99.999.999/9999-99");
            </script>





            @Html.LabelFor(model => model.InscricaoMunicipal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.InscricaoMunicipal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InscricaoMunicipal, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.InscricaoEstadual, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.InscricaoEstadual, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InscricaoEstadual, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="pessoaJuridicaFormMessage" hidden>
            <div class="col-md-offset-10 col-md-2">
                <h4>
                    @Html.ValidationMessage("Success", new { @class = "label label-success pull-right" })
                    @Html.ValidationMessage("ErrorCustomized", new { @class = "label label-danger pull-right" })<br />
                    @Html.ValidationMessage("ErrorSystem", new { @class = "label label-danger pull-right" })
                </h4>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
                <button type="submit" class="btn btn-success pull-right" id="btnPessoaJuridicaFormSubmit" data-loading-text="Aguarde..." autocomplete="off">
                    <i class="glyphicon glyphicon-refresh"></i> Atualizar
                </button>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#btnPessoaJuridicaFormSubmit').on('click', function () {
                            var $btn = $(this).button('loading')
                        });
                    });
                </script>

            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
