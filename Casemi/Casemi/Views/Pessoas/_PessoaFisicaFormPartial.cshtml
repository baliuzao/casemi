@model Casemi.Models.PessoaFisica


@using (Ajax.BeginForm("PessoaFisicaFormPartial", "Pessoas", new AjaxOptions { UpdateTargetId = "PessoaFisicaForm", OnComplete = "$('#pessoaFisicaFormMessage').fadeIn(); $('#pessoaFisicaFormMessage').fadeOut(5000);" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PessoaID)

        <div class="form-group">
            @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.DropDownList("Sexo", null, "Selecione", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
            </div>
        
            @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", placeholder = "000.000.000-00" } })
                @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                @*<script type="text/javascript">
                    $("#CPF").mask("999.999.999-99");
                </script>*@

            </div>
        
            @Html.LabelFor(model => model.DataDeNascimento, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.DataDeNascimento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataDeNascimento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Naturalidade, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Naturalidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naturalidade, "", new { @class = "text-danger" })
            </div>
        
            @Html.LabelFor(model => model.NomeDoPai, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.NomeDoPai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeDoPai, "", new { @class = "text-danger" })
            </div>
        
            @Html.LabelFor(model => model.NomeDaMae, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.NomeDaMae, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeDaMae, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="pessoaFisicaFormMessage" hidden>
            <div class="col-md-offset-10 col-md-2">
                <h4>
                    @Html.ValidationMessage("Success", new { @class = "label label-success pull-right" })
                    @Html.ValidationMessage("ErrorCustomized", new { @class = "label label-danger pull-right" })<br />
                    @Html.ValidationMessage("ErrorSystem", new { @class = "label label-danger pull-right" })
                </h4>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
                <button type="submit" class="btn btn-success pull-right" id="btnPessoaFisicaSubmit" data-loading-text="Aguarde..." autocomplete="off">
                    <i class="glyphicon glyphicon-refresh"></i> Atualizar
                </button>
                <script>
                    $('#btnPessoaFisicaSubmit').on('click', function () {
                        var $btn = $(this).button('loading')
                    })
                </script>
            </div>
        </div>
        
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
