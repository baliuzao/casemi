@model Casemi.Models.PessoaAssociado


@using (Ajax.BeginForm("PessoaAssociadoFormPartial", "Pessoas", new AjaxOptions { UpdateTargetId = "PessoaAssociadoForm", OnComplete = "$('#pessoaAssociadoFormMessage').fadeIn(); $('#pessoaAssociadoFormMessage').fadeOut(5000);" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.PessoaID)

        <div class="form-group">
            @Html.LabelFor(model => model.Matricula, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Matricula, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.Matricula, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.DepartamentoID, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.DropDownList("DepartamentoID", null, "Selecione", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartamentoID, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Profissao, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Profissao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Profissao, "", new { @class = "text-danger" })              
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RendaMensal, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.RendaMensal, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.RendaMensal, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.LimiteDeCredito, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.LimiteDeCredito, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LimiteDeCredito, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.AssociadoDesde, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.AssociadoDesde, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AssociadoDesde, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Aposentado, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Aposentado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Aposentado, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Afastado, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Afastado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Afastado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="pessoaAssociadoFormMessage" hidden>
            <div class="col-md-offset-10 col-md-2">
                <h4>
                    @Html.ValidationMessage("Success", new { @class = "label label-success pull-right" })
                    @Html.ValidationMessage("ErrorCustomized", new { @class = "label label-danger pull-right" })<br />
                    @Html.ValidationMessage("ErrorSystem", new { @class = "label label-danger pull-right" })
                </h4>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
                <button type="submit" class="btn btn-success pull-right" id="btnPessoaAssociadoSubmit" data-loading-text="Aguarde..." autocomplete="off">
                    <i class="glyphicon glyphicon-refresh"></i> Atualizar
                </button>
                <script>
                    $('#btnPessoaAssociadoSubmit').on('click', function () {
                        var $btn = $(this).button('loading')
                    })
                </script>
            </div>
        </div>
    </div>
}
